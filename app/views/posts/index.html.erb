<h1>Believe It Or Not I'm Blogging On Air</h1>
<% @posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, author_post_path(post.author, post) %></h2>

    <h3>by: <%= link_to post.author.name, author_posts_path(post.author) %></h3>
    
    <p><%= post.description %></p>
  </div>
<% end %>
